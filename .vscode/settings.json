    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "node_modules": true,
        ".vscode": true,
        "**/*.exe": true,
        "**/Thumbs.db": true,
        "**/.DS_Store": true
